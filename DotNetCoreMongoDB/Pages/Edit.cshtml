@page "{id:guid}"
@model EditModel

@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>Asset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Asset.AssetId" />
            <div class="form-group">
                <label asp-for="Asset.Symbol" class="control-label"></label>
                <input asp-for="Asset.Symbol" class="form-control" />
                <span asp-validation-for="Asset.Symbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
